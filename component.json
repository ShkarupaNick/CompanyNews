{
  "title": "DNB API (Java)",
  "description": "elastic.io component for the DNB API",
  "docsUrl": "https://github.com/elasticio/dnb-component-java",
  "credentials": {
    "fields": {
      "apiKey": {
        "label": "API key",
        "required": true,
        "viewClass": "TextFieldWithNoteView",
        "note": "Please use <b>DNB</b> API key. For more details see <a href='https://docs.dnb.com/direct/2.0/en-US/newsandmedia/latest/orderproduct/news-soap-API#NewsandSocialMedia' target='_blank'>DNB API docs</a>."
      },
      "apiPassphrase": {
        "label": "API passphrase",
        "required": true,
        "viewClass": "PasswordFieldView"
      }
    },
    "verifier": "io.elastic.dnb.verifier.CredentialsVerifierImpl"
  },
  "actions": {
    "CompanyNews": {
      "main": "io.elastic.petstore.actions.CreatePet",
      "title": "Company News",
      "description": "Creates a new Pet",
      "metadata": {
        "in": "./schemas/createPet.in.json",
        "out": "./schemas/createPet.out.json"
      }
    }
  }
}
